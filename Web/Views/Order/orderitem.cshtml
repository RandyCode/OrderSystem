@{
    Layout = "~/views/template/content.cshtml";
}


@section title{ 经销商平台 | 销售订单  }


@section content_header{

    <h1>
        订单管理
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/home/home"><i class="glyphicon glyphicon-home"></i> 主页</a></li>
        <li>订单管理</li>
        <li class="active">订单详细</li>

    </ol>
}

@model List<OrderManager.Model.Models.OM_OrderItem>

@section content{
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">
                <label>订单详细</label>
                <small>订单号：@ViewBag.OrderNum</small>
            </h3>
            <div class="box-tools">
                <div class="input-group">              
                    <button class="btn btn-sm btn-primary" id="back"><i class="glyphicon glyphicon-backward"></i>&nbsp;返回</button>               
                </div>
            </div>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-6"></div><div class="col-sm-6"></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered table-hover dataTable" role="grid">
                            <thead>
                                <tr role="row">
                                    <th tabindex="0" style="min-width:10px">DocEntry</th>
                                    <th tabindex="0" style="min-width:10px">VisualOrder</th>
                                    <th tabindex="0" style="min-width:10px">ItemCode</th>
                                    <th tabindex="0" style="min-width:10px">ItemName</th>
                                    <th tabindex="0" style="min-width:10px">ItemFName</th>
                                    <th tabindex="0" style="min-width:10px">Flag</th>
                                    <th tabindex="0" style="min-width:10px">WhsCode</th>
                                    <th tabindex="0" style="min-width:10px">Price</th>
                                    <th tabindex="0" style="min-width:10px">Quantity</th>
                                    <th tabindex="0" style="min-width:10px">TotalPrice</th>
                                    <th tabindex="0" style="min-width:10px">OpenQty</th>
                                    <th tabindex="0" style="min-width:10px">CloseQty</th>
                                    <th tabindex="0" style="min-width:10px">Currency</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr role="row">
                                        <td>@item.DocEntry</td>
                                        <td>@item.VisualOrder</td>
                                        <td>@item.ItemCode</td>
                                        <td>@item.ItemName</td>
                                        <td>@item.ItemFName</td>
                                        <td>@item.Flag</td>
                                        <td>@item.WhsCode</td>
                                        <td>@item.Price</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.OpenQty</td>
                                        <td>@item.CloseQty</td>
                                        <td>@item.Currency</td>
                                    </tr>
                                }

                            </tbody>

                        </table>

                    </div>
                </div>
    
            </div>
        </div>
    </div>


}


@section script{
    @*<script src="~/Js/utility/jquery.min.js"></script>*@
    <script>
        $(function () {
            $("#orderManager").addClass("active");
            $("#orderManager .treeview-menu").attr("display", "block");
            $("#orderManager .treeview-menu>li").eq(0).addClass("active");


            $("#back").click(function () {
                location.href = history.back();
            })

            
        })
    </script>
}